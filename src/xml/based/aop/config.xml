<!-- 	definition of the aspect's conf -->
	<aop:config>
		<aop:aspect id="print" ref="printer">
<!-- 		<aop:pointcut expression="execution(* xml.based.aop.SpellChecker.*(..))" id="usePrinter"/> -->
		<aop:pointcut expression="execution(* xml.based.aop.*.*(..))" id="usePrinter"/>
		<aop:after-returning pointcut-ref="usePrinter" method="print"/>
		
		</aop:aspect>
	
	</aop:config>

	<bean id="spellChecker" class="xml.based.aop.SpellChecker">
		<property name="value" value="My first start AOP"></property>
	</bean>

	<bean id="textEditor" class="xml.based.aop.TextEditor">
		<property name="spellChecker" ref="spellChecker"></property>
	</bean>

	<bean id="transaction" class="xml.based.aop.Transaction">
		<property name="id" value="1" />
		<property name="description" value="SALES" />
	</bean>

	<bean id="logging" class="xml.based.aop.Logging" />

	<bean id="auditing" class="xml.based.aop.Auditing" />
	
	<bean id="printer" class="xml.based.aop.Printer" />
	
	

</beans>